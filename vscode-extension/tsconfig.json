{
    "compilerOptions":  {
        "target":  "ES2020",
        "outDir":  "./out",
        "lib":  ["ES2020", "dom"],
        "declarationMap":  false,
        "declaration":  false,
        "composite":  false,
        "strict":  true,
        "module":  "commonjs",
        "esModuleInterop":  true,
        "skipLibCheck":  true,
        // "rootDir":  "./src",
        "sourceMap":  true,
        "types": ["vscode", "node", "mocha"]
    },
    "exclude":  [
        "node_modules",
        ".vscode-test",
        "out",
        "src/__tests__/integration/**",
        "src/__tests__/e2e/**",
        "src/__mocks__/**"
    ],
    "include": [
    "minimal-src/extension.ts",
    "tests/index.ts",
    "tests/runTest.ts",
    "tests/extension.test.ts"
    ]
}
