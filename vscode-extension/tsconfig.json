{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "outDir":  "./out",
                            "lib":  [
                                        "ES2020"
                                    ],
                            "declarationMap":  false,
                            "declaration":  false,
                            "composite":  false,
                            "strict":  true,
                            "module":  "commonjs",
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "rootDir":  "./src",
                            "sourceMap":  true
                        },
    "exclude":  [
                    "node_modules",
                    ".vscode-test",
                    "out",
                    "src/__tests__/integration/**",
                    "src/__tests__/e2e/**"
                ]
}
